<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.bluesky.activitytracker">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">

            <!--
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            -->
        </activity>
        <activity
            android:name=".CreateActivity"
            android:label="@string/title_activity_create"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CreateCategory"
            android:label="Add Category"
            android:theme="@android:style/Theme.Holo.Dialog" />
        <activity
            android:name=".CreateProject"
            android:label="Add Project"
            android:theme="@android:style/Theme.Holo.Dialog" />
        <activity
            android:name=".Filter"
            android:label="@string/title_activity_filter"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".pickers.Filtered_Activities"
            android:label="@string/title_activity_filtered__activities"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ShowNotes"
            android:label="@string/title_activity_show_notes"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".PinActivity"
            android:label="@string/title_activity_pin"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Settings"
            android:label="@string/title_activity_settings"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ChangePassword"
            android:label="@string/title_activity_change_password"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>